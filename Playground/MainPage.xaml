<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:gummy="clr-namespace:GummyWorms;assembly=GummyWorms"
             mc:Ignorable="d" x:Class="Playground.MainPage">

    <StackLayout VerticalOptions="Center" Spacing="40">
        
        <gummy:ProgressBar
            Margin="30"
            HeightRequest="30"
            Progress="0.3"
            CornerRadius="15"
            BarBackgroundColor="LightGray"
            GradientStartColor="Violet"
            HasText="True"
            TextColor="White"
            AlternativeTextColor="DarkSlateGray"
            GradientEndColor="Tomato" />

        <gummy:RadialProgressBar
            HorizontalOptions="Center"
            HeightRequest="200"
            WidthRequest="200"
            ProgressBackgroundColor="LightGray"
            ProgressColor="Purple"
            ProgressThickness="30"
            
            Progress=".7"/>

    </StackLayout>
</ContentPage>